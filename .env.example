# Ollama LLM Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen3:8b
OLLAMA_TEMPERATURE=0.1

# PostgreSQL Configuration
PG_DSN=postgresql://postgres:your_password@localhost:5432/ragdb

# Elasticsearch Configuration
ES_URL=http://localhost:9200
ES_USER=elastic
ES_PASSWORD=your_elasticsearch_password

# Qdrant Configuration
QDRANT_PATH=./qdrant_storage
QDRANT_COLLECTION_FINDINGS=findings_vectors
QDRANT_COLLECTION_CHUNKS=chunks_vectors

# Retrieval Parameters
FINDINGS_TOP_K_ES=150
FINDINGS_TOP_K_VEC=150
FINDINGS_RRF_K=60
FINDINGS_FINAL_TOP_N=30

CHUNKS_TOP_K_ES=300
CHUNKS_TOP_K_VEC=300
CHUNKS_MMR_LAMBDA=0.65

QDRANT_EF_SEARCH=96
QDRANT_SCORE_THRESHOLD=0.35

# Scoring Weights
ALPHA_BM25=0.5
BETA_VECTOR=0.4
GAMMA_FIELD=0.1

# Block Ranking
BLOCK_TOP_K_CHUNKS=3
BLOCK_INTERSECTION_MIN=2
BLOCK_FINAL_TOP_N=3
MAX_BLOCKS_PER_DOC=2

# Section Blending
WEIGHT_SECTION_CHAKAN=0.5
WEIGHT_SECTION_GIHUB=0.5

# Context Packing
CONTEXT_TOKEN_BUDGET=4000
CONTEXT_CHUNKS_PER_BLOCK=3
CONTEXT_MERGE_ADJACENT=true

# Timeout
RESPONSE_TIMEOUT=2.5
